@page "/"
@inherits IndexBase

<div class="container-fluid">
    <div class="row mt-3 mb-3">
        <div class="col">
            <h1>@Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            <textarea id="markdownEntry" class="w-100 h-100" @bind="@MarkdownContent" placeholder="Enter markdown here..."></textarea>
        </div>
        <div class="col-md-6">
            <div class="card w-100 h-100">
                <div class="card-body">
                    <MarkdownView Content="@MarkdownContent" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <MarkdownStats Content="@MarkdownContent" />
        </div>
    </div>
</div>